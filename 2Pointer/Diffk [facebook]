class Solution:

    
	def diffPossible(self, A, B):
        if (len(A) < 2):
            return 0
        i = 0
        j = 1
        while (i < len(A) and j < len(A)):
            if (A[j] - A[i] - B == 0 and i != j):
                return 1
            elif (A[j] - A[i] - B > 0):
                i += 1
            elif (A[j] - A[i] - B < 0):
                j += 1
            else:
                j += 1
        return 0
